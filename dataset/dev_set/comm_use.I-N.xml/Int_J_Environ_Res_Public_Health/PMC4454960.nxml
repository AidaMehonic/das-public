er" valign="middle" rowspan="1" colspan="1">270.00</td><td align="center" valign="middle" rowspan="1" colspan="1">160.00</td><td align="center" valign="middle" rowspan="1" colspan="1">260</td><td align="center" valign="middle" rowspan="1" colspan="1">34.00</td><td align="center" valign="middle" rowspan="1" colspan="1">650</td><td rowspan="2" align="center" valign="middle" colspan="1">[<xref rid="B35-ijerph-12-05143" ref-type="bibr">35</xref>]</td></tr><tr><td align="center" valign="middle" rowspan="1" colspan="1">Tarkwa Non-Mine Workers</td><td align="center" valign="middle" rowspan="1" colspan="1">17</td><td align="center" valign="middle" rowspan="1" colspan="1">240.00</td><td align="center" valign="middle" rowspan="1" colspan="1">160.00</td><td align="center" valign="middle" rowspan="1" colspan="1">240</td><td align="center" valign="middle" rowspan="1" colspan="1">43.00</td><td align="center" valign="middle" rowspan="1" colspan="1">700</td></tr><tr style="border-top:solid thin"><td align="center" valign="middle" rowspan="1" colspan="1">As</td><td align="center" valign="middle" rowspan="1" colspan="1">Accra, Greater Accra Region</td><td align="center" valign="middle" rowspan="1" colspan="1">Accra (Control)</td><td align="center" valign="middle" rowspan="1" colspan="1">4</td><td align="center" valign="middle" rowspan="1" colspan="1">200.00</td><td align="center" valign="middle" rowspan="1" colspan="1">69.00</td><td align="center" valign="middle" rowspan="1" colspan="1">200</td><td align="center" valign="middle" rowspan="1" colspan="1">120.00</td><td align="center" valign="middle" rowspan="1" colspan="1">280</td><td align="center" valign="middle" rowspan="1" colspan="1">[<xref rid="B35-ijerph-12-05143" ref-type="bibr">35</xref>]</td></tr><tr style="border-top:solid thin"><td rowspan="2" align="center" valign="middle" colspan="1">As</td><td rowspan="2" align="center" valign="middle" colspan="1">Talensi District, Upper East Region</td><td align="center" valign="middle"